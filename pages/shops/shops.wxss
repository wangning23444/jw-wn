/* pages/shops/shops.wxss */
/* 商家第一个 */
.shops_first {
  width: 100%;
  height: 304rpx;
  display: flex;
  flex-direction: column;
}

.sf {
  width: 90%;
  height: 50%;
  margin: auto 36rpx;
  display: flex;
}

/* 上边的 */
.sf_one {
  width: 100%;
  margin-top: 36rpx;
  border-bottom: 1px solid #ccc;
}

/* 左边 */
.sf_one_lf {
  width: 70%;
}

.sf_one_lf_title {
  font-size: 28rpx;
  font-weight: 500;
  color: rgb(7, 17, 27)
}

.sf_one_lf_main {
  width: 100%;
  margin-top: 16rpx;
  display: flex;
}

/* 星星图 */
.sf_one_lf_main_img {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}


.img_star {
  width: 36rpx;
  height: 36rpx;
}

.img_text1 {
  margin: auto 24rpx auto 16rpx;
}

/* 右边 */
.sf_one_rf {
  width: 10%;
  background: red;
}

.sf_one_rf_img {
  width: 36rpx;
  height: 36rpx;

}

/* 下边的 */
.sf_two {
  margin-bottom: 36rpx;
  background: green;
}